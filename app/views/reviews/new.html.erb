<div class="container">
    <h2 style="text-align: center">Add a review for <%= @restaurant.name %>!</h2>
    <div class="card" style="padding: 20px">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, as: :radio_buttons, collection: [0, 1, 2, 3, 4, 5]  %>
        <%= f.submit "add review", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Back", restaurant_path(@restaurant), class: 'btn btn-primary', id: 'review-back-btn' %>
    </div>
</div>

